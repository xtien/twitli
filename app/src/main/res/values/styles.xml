<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

   <style name="text">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">10dp</item>
       <item name="android:textSize">@dimen/text_size</item>
   </style>

    <style name="version" parent="text">
        <item name="android:textSize">@dimen/version_size</item>
    </style>

    <style name="title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="sub_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/subtitle_size</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="switchstyle" parent="text">
        <item name="android:layout_margin">2dp</item>
    </style>

</resources>
