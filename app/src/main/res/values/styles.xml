<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/text_padding</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="status" parent="text">
        <item name="android:textSize">@dimen/status_text_size</item>
    </style>

    <style name="tweet_text" parent="status">
        <item name="android:paddingBottom">@dimen/tweet_padding_bottom</item>
        <item name="android:paddingTop">@dimen/tweet_padding_top</item>
        <item name="android:textColor">@color/tweet_text</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="tweet_name" parent="tweet_text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="status_id" parent="status">
        <item name="android:textSize">@dimen/status_text_size_small</item>
        <item name="android:textColor">@color/tweet_id</item>
    </style>

    <style name="version" parent="text">
        <item name="android:textSize">@dimen/version_size</item>
    </style>

    <style name="title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="sub_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/subtitle_size</item>
    </style>

    <style name="switchstyle" parent="text">
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>

    </style>

    <style name="tweet_edit">
        <item name="android:layout_marginTop">@dimen/tweetwindow_side</item>
        <item name="android:layout_marginBottom">@dimen/tweetwindow_side</item>
        <item name="android:layout_marginStart">@dimen/tweetwindow_top</item>
        <item name="android:layout_marginEnd">@dimen/tweetwindow_top</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@color/tweet_background</item>
    </style>
</resources>
